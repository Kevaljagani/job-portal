<section class="flex justify-end mt-4 mr-8">
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-5 rounded-full">
     <a onclick="document.getElementById('logout').submit()" href="/">Logout</a>
    </button>
  </section>
  <section class="flex justify-center text-4xl mt-10"><h1>Admin Workspace</h1></section>
<section class="flex justify-center pt-24">
<form action="/update" method="POST" class="w-full max-w-lg content-center">
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        id
      </label>
      <input name="id" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" placeholder="id" value="<%= car[0].id %>">
 
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        email
      </label>
      <input name="email" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="email" value="<%= car[0].email %>">
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        name
      </label>
      <input name="name" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="name" value="<%= car[0].name %>">
    </div>
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Conteact No
      </label>
      <input name="no" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="Contact No" value="<%= car[0].number %>">
    </div>
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Role
      </label>
      <input name="role" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="Role" value="<%= car[0].role %>">
          <button class="bg-green-500 hover:bg-blue-700 text-white font-bold py-2 px-10 rounded-full mt-12" type="submit">
  			Update
			</button>
      <button class="bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-10 rounded-full mt-12">
       <a href="/userdashboard">Delete</a>
      </button>

    </div>

  </div>

</form>
